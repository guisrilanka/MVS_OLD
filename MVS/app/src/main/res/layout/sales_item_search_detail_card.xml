<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@color/hockeyapp_background_light"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:id="@+id/btnimgitem1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="3dp"
            android:background="@drawable/rectangle_all_rounded_bg_whitecolor"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:gravity="center_horizontal"
                android:text="ITM0001"
                android:textColor="@color/hockeyapp_text_black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgitem1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:layout_marginBottom="5dp"
                android:src="@drawable/item_no_image" />

            <TextView
                android:id="@+id/itemDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:gravity="center_horizontal"
                android:minWidth="400dp"
                android:lines="5"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="Fish Meat, Potato Starch, Salt, Sugar, test for
            long description with chinese charaters eg: 墨鱼丸肉、鱼肉、土豆淀粉、棕榈油"
                android:textColor="@color/hockeyapp_text_black"
                android:textSize="10sp"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>