<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutPromoRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffffff">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingRight="2dp">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/lblItemDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MV/WC: PASTE GROUP"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lblTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20/06/16 8:00 a.m - 20/06/16 4:00 p.m."
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/lblTransferTo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SINGAPORE STORE"
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lblStartTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start Time:  8:00 a.m."
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lblEndTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End Time: 4 a.m."
                                android:textColor="@android:color/black"
                                android:textSize="12sp" />
                        </LinearLayout>

                    </LinearLayout>

                    <!--<LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="10dp">

                    </LinearLayout>-->



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="25dp">

                    <Button
                        android:id="@+id/btnStart"
                        android:layout_width="200dp"
                        android:layout_height="25dp"
                        android:background="@color/colorAccent"
                        android:focusable="false"
                        android:text="Start" />

                    <Button
                        android:id="@+id/btnEnd"
                        android:layout_width="200dp"
                        android:layout_height="25dp"
                        android:background="@color/blue"
                        android:focusable="false"
                        android:text="End" />
                </RelativeLayout>

                <Button
                    android:id="@+id/btnClose"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@android:color/holo_red_light"
                    android:focusable="false"
                    android:text="X" />
            </LinearLayout>



        </RelativeLayout>

        <LinearLayout
            android:layout_width="65dp"
            android:layout_height="62dp"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRuntime"
                android:layout_width="65dp"
                android:layout_height="22dp"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:background="@color/colorAccent"
                android:focusable="false"
                android:text="Runtime"
                android:textColor="@android:color/white"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnOutput"
                android:layout_width="65dp"
                android:layout_height="22dp"
                android:background="@color/colorAccent"
                android:focusable="false"
                android:text="Output"
                android:textColor="@android:color/white"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblPurchaseQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ord Qty: 1000"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblFinishedQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fin. Qty: 1000"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblRemainingQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rem. Qty: 1000"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
