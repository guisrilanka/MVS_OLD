<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="spinnerItemStyle">
        <item name="android:gravity">center</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:gravity">center</item>
        <item name="android:background">#ffffff</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="ListViewStyle.Light" parent="android:style/Widget.ListView">
        <item name="background">@color/lg</item>
        <item name="android:divider">@android:color/white</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="MenuBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/white</item>

        <!-- To change the background of options menu-->
        <item name="android:itemBackground">@drawable/action_bar_style</item>
    </style>

    <style name="table_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:divider">@drawable/table_driver</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">middle</item>
    </style>

    </resources>
